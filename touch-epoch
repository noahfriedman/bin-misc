#!/bin/sh
# $Id: touch-epoch,v 1.2 1996/10/23 01:41:47 friedman Exp $

TZ=GMT
export TZ

if touch --version 2> /dev/null ; then
  exec touch -t 010100001970.00 ${1+"$@"}
else
  exec perl -e '
    foreach $file (@ARGV)
      {
        @statinfo = stat ($file);
        utime ($statinfo[8], 0, $file);
      }' -- ${1+"$@"}
fi

# touch-epoch ends here

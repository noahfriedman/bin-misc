#!/bin/sh
# $Id: fix-directory-timestamps,v 1.1 2001/01/13 15:28:58 friedman Exp $

find "$@" -type d -print \
 | sort -r \
 | while read d; do
     nfile=`ls -1At "$d" | sed -e '/CVS/d' | head -1`
     case "$nfile" in
       '' ) : ;;
       * ) touch -r "$d/$nfile" "$d" ;;
     esac
   done

# eof

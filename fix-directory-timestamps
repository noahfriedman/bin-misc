#!/bin/sh
# $Id$

ignore='CVS RCS {arch} .svn'

find_ign=`for i in $ignore; do echo ! -name $i ; done`
sed_ign=` for i in $ignore; do echo "/^$i\$/d" ; done`

find ${1+"$@"} $find_ign -type d -print \
  | sort -r \
  | while read d; do
     nfile=`ls -1At "$d" | sed -e "$sed_ign" -e q`
     case $nfile in
       '' ) : ;;
       * ) touch -r "$d/$nfile" "$d" ;;
     esac
   done

# eof

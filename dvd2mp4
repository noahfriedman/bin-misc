#!/usr/bin/env bash
# dvd2mp4 --- rip dvds
# Author: Noah Friedman <friedman@splode.com>
# Created: 2013-10-18
# Public domain.

# $Id: dvd2mp4,v 1.3 2013/11/17 08:18:00 friedman Exp $

handbrake()
{
    declare -a opts=(
        --preset     "$preset"

        --two-pass
        --turbo

        --format     "av_$format"
        --optimize
        --markers
        --inline-parameter-sets
    )

    HandBrakeCLI "${opts[@]}" "$@"
}

num_chapters()
{
    HandBrakeCLI -t 1 --scan -i "$1" 2>&1 \
        | sed -ne 's/^.*has \([0-9]*\) chapter.*$/\1/p'
}

chapters()
{
    basename=`echo "$1" | sed -e 's=.*/==' -e 's/\.[^.]*$//'`
    last=`num_chapters "$1"`

    for c in `seq --equal-width 1 $last`; do
        handbrake -c $c -i "$1" -o "$basename - Chapter $c.$format"
    done
}

single()
{
    basename=`echo "$1" | sed -e 's=.*/==' -e 's/\.[^.]*$//'`
    handbrake -i "$1" -o "$basename.$format"
}

# HandBrakeCLI -z
preset()
{
    case $1 in
        vfast-720p    ) preset='Very Fast 720p30'           ;;
        vfast-1080p   ) preset='Very Fast 1080p30'          ;;

        fast-720p     ) preset='Fast 720p30'                ;;
        fast-1080p    ) preset='Fast 1080p30'               ;;

        hq-720p       ) preset='HQ 720p30 Surround'         ;;
        hq-1080p      ) preset='HQ 1080p30 Surround'        ;;

        vhq-720p      ) preset='Super HQ 720p30 Surround'   ;;
        vhq-1080p     ) preset='Super HQ 1080p30 Surround'  ;;

        android-720p  ) preset='Android 720p30'             ;;
        android-1080p ) preset='Android 1080p30'            ;;

        *             ) preset=$1                           ;;
    esac
}

main()
{
    preset='CLI Default'
    format=mp4
    split=single

    while : ; do
        case $# in 0) break ;; esac

        case $1 in
            --*=* )
                opt=${1%=*}
                val=${1#*=}
                shift
                set fnord "$opt" "$val" "$@"
                shift ;;
        esac

        case $1 in
            -p | --preset   | --p* ) preset "$2" ; shift ;;
            -f | --format   | --f* ) format=$2   ; shift ;;

            -s | --single   | --s* ) split=single   ;;
            -c | --chapters | --c* ) split=chapters ;;

            -* )
                echo "${0##*/}: $1: Invalid option" 1>&2
                exit 1 ;;

            * ) break ;;
        esac

        shift
    done

    for dvd in "$@"; do
        $split "$dvd"
    done
}

main "$@"

# eof
